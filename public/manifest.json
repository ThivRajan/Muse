{
  "manifest_version": 3,
  "name": "Muse - AI Cover Letter Generator",
  "description": "Generate compelling cover letters with the power of AI.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo-inactive.png",
      "48": "logo-inactive.png",
      "128": "logo-inactive.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "background"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
