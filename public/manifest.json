{
  "manifest_version": 3,
  "name": "muses",
  "description": "AI Cover Letter Generator",
  "version": "0.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo-inactive.png",
      "48": "logo-inactive.png",
      "128": "logo-inactive.png"
    }
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "downloads",
    "background"
  ],
  "background": {
    "scripts": ["service-worker.js"]
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
