{
  "manifest_version": 3,
  "name": "muses",
  "description": "AI Cover Letter Generator",
  "version": "0.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "downloads",
    "background"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
